@model TextChat.ViewModels.RegisterViewModel

<div class="card" width="60%">
    <div class="card-body">
        <div class="card-title">Register</div>
        <div class="card-body">
            <form asp-action="Register" method="post">
                <div class="form-group ">
                    <label asp-for="Username"></label>
                    <input class="form-control" type="text" asp-for="Username">
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" class="form-control" asp-for="Password">
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm password</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword">
                   
                </div>
                <div class="float-end">
                    <button class="btn btn-primary mt-2" onclick="renderLoginPartial()" type="button">Back</button>
                    <button class="btn btn-success mt-2" asp-action="Register" type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/login.js"></script>