@model TextChat.ViewModels.LogInViewModel

<div class="card">
    <div class="card-body">
        <div class="card-title">Login</div>
        <div class="card-body">
            <form asp-action="Login" method="post" id="loginForm">
                <div class="form-group ">
                    <label asp-for="Username"></label>
                    <input class="form-control" type="text" asp-for="Username">
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" class="form-control" asp-for="Password">
                </div>
                <div class="login--button--group">
                    <button class="register--button" onclick="renderRegisterPartial()"  type="button">Register</button>
                    <button class="login--button" asp-action="Login" type="submit">Login</button>
                </div>
                
            </form>
        </div>
    </div>
</div>




<script src="~/js/login.js"></script>